    "version": "0.2.0",
    "configurations": [
       {
            "name": "Python: Remote Debug (Docker)",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/services/payments",  // path to your code on host
                    "remoteRoot": "/app"   // whatever your WORKDIR is in Dockerfile
                }
            ]
        },
        {
            "type": "dockerfile",
            "request": "launch",
            "name": "Docker: Build",
            "dockerfile": "Dockerfile",
            "contextPath": "${workspaceFolder}"
        },
        
    ]
}